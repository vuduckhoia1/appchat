<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg" class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <%= form_for(:session, html: {class: "form-signin"}) do |f| %>
          <div class="form-outline mb-4">
            <%= f.text_field :username, autofocus: true, class: 'form-control form-control-lg' %>

            <%= f.label :username, 'Username' %>
          </div>

          <div class="form-outline mb-4">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control form-control-lg' %>

            <%= f.label :password, 'Password' %>
            
          </div>
          <%= f.button "Sign in", class: 'btn btn-primary btn-lg btn-block' %>
          <div class="text-right">
            <%= link_to "Register", new_user_path %>
          </div>

        <% end %>

      </div>
    </div>
  </div>
</section>